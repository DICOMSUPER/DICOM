{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@backend/entities": ["backend/libs/entities/src/index.ts"],
      "@backend/shared-decorators": [
        "backend/libs/shared-decorators/src/index.ts"
      ],
      "@backend/shared-enums": ["backend/libs/shared-enums/src/index.ts"],
      "@backend/shared-guards": ["backend/libs/shared-guards/src/index.ts"],
      "@backend/shared-interfaces": [
        "backend/libs/shared-interfaces/src/index.ts"
      ],
      "@backend/shared-utils": ["backend/libs/shared-utils/src/index.ts"]
    }
  }
}
