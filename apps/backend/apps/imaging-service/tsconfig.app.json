{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../libs/shared-client/tsconfig.lib.json"
    },
    {
      "path": "../../libs/redis/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared-exception/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared-enums/tsconfig.lib.json"
    },
    {
      "path": "../../entities/tsconfig.lib.json"
    },
    {
      "path": "../../libs/database/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared-domain/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared-utils/tsconfig.lib.json"
    }
  ]
