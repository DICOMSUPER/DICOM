{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/lib/entities/systems/ai-analysis.entity.ts",
    "src/lib/entities/systems/notification.entity.ts",
    "src/lib/entities/systems/system-log.entity.ts"
  ],
  "references": [
    {
      "path": "../../entities/tsconfig.lib.json"
    },
    {
      "path": "../shared-utils/tsconfig.lib.json"
    },
    {
      "path": "../shared-interfaces/tsconfig.lib.json"
    },
    {
      "path": "../database/tsconfig.lib.json"
    },
    {
      "path": "../shared-enums/tsconfig.lib.json"
    }
  ]
}
